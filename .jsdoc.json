{
  "opts": {
    "destination": "./docs/",
    "recurse": true,     
    "tutorials": "src/tutorials"
  },
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["markdown"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
