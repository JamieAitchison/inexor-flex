{
  "name": "@inexor-game/flex",
  "version": "0.9.0",
  "description": "Scripting environment for Inexor.",
  "scripts": {
    "start": "node server/index.js",
    "stop": "./inexor flex shutdown",
    "restart": "./inexor flex restart",
    "test": "mocha $(find . -not -iwholename '*node_modules*' -iwholename '*test*' -name '*.js')",
    "docs": "jsdoc -c .jsdoc.json",
    "lint": "eslint .",
    "dev": "node server/index.js --profile=devenv",
    "server": "node server/index.js --profile=server",
    "shell": "node inexor shell",
    "postinstall": "npm install @inexor-game/api @inexor-game/console @inexor-game/context @inexor-game/entities @inexor-game/instances @inexor-game/interfaces @inexor-game/logger @inexor-game/media @inexor-game/path @inexor-game/profiles @inexor-game/tree @inexor-game/treeclient @inexor-game/types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inexor-game/flex.git"
  },
  "keywords": [
    "inexor",
    "gaming"
  ],
  "author": "The Inexor Team",
  "license": "Zlib",
  "bugs": {
    "url": "https://github.com/inexor-game/code/issues"
  },
  "homepage": "https://github.com/inexor-game/flex#readme",
  "engines": {
    "node": ">=6.9.1"
  },
  "dependencies": {
    "@inexor-game/api": "file:server/api",
    "@inexor-game/console": "file:src/console",
    "@inexor-game/context": "file:src/context",
    "@inexor-game/entities": "file:src/entities",
    "@inexor-game/instances": "file:src/instances",
    "@inexor-game/interfaces": "file:src/interfaces",
    "@inexor-game/logger": "file:server/util/logger",
    "@inexor-game/media": "file:src/media",
    "@inexor-game/path": "file:server/util/path",
    "@inexor-game/profiles": "file:src/profiles",
    "@inexor-game/tree": "file:src/tree",
    "@inexor-game/treeclient": "file:src/treeclient",
    "@inexor-game/types": "file:src/types",
    "circular-json": "^0.3.1",
    "express": "^4.15.2",
    "figlet": "^1.2.0",
    "npid": "^0.4.0",
    "prettyjson": "^1.2.1",
    "segfault-handler": "^1.0.0",
    "tomlify": "^0.2.0",
    "wait-on": "^2.0.2",
    "xdg-basedir": "^3.0.0",
    "yargs": "^7.0.2",
    "toml": "^2.3.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-iterator": "^1.1.4",
    "eslint": "^3.19.0",
    "jsdoc": "^3.4.3",
    "minami": "^1.1.1",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.13.0"
  }
}
